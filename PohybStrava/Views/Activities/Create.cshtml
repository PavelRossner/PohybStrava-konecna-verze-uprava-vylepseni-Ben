@model PohybStrava.Models.Activity

@{
    ViewData["Title"] = "Přidat aktivitu";
}

<body>
    <div id="sirkatextuhlavnistrana">

        @if (this.Context.User.IsInRole("Admin") == false)
        {
            <h3>Přidejte aktivitu</h3>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="DateActivity" class="control-label"></label>
                            <input asp-for="DateActivity" class="form-control" />
                            <span asp-validation-for="DateActivity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Trail" class="control-label"></label>
                            <input asp-for="Trail" class="form-control" />
                            <span asp-validation-for="Trail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Distance" class="control-label"></label>
                            <input asp-for="Distance" class="form-control" />
                            <span asp-validation-for="Distance" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Elevation" class="control-label"></label>
                            <input asp-for="Elevation" class="form-control" />
                            <span asp-validation-for="Elevation" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Time" class="control-label"></label>
                            <input asp-for="Time" class="form-control" />
                            <span asp-validation-for="Time" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Pace" class="control-label"></label>
                            <input asp-for="Pace" class="form-control" />
                            <span asp-validation-for="Pace" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EnergyActivity" class="control-label"></label>
                            <input asp-for="EnergyActivity" class="form-control" />
                            <span asp-validation-for="EnergyActivity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Přidat" class="pridat-tlacitko" />
                        </div>
                    </form>
                </div>
            </div>
            <p></p>
            <div>
                <a asp-action="Index" class="pridat-tlacitko">Zpět</a>
            </div>
        }

        @if (this.Context.User.IsInRole("Admin"))
        {
            <p>Admin nemůže data upravovat. Přihlaste se jako uživatel.</p>
            <p></p>
            <div>
                <a asp-action="Index" class="pridat-tlacitko">Zpět</a>
            </div>
        }
    </div>
</body>