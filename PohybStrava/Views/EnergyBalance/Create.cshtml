@model EnergyBalance

@{
    ViewData["Title"] = "Přidat záznam";
}

<body>
    <div id="sirkatextu">

        <header><h3>Zadejte požadované informace</h3></header>

        @if (this.Context.User.IsInRole("Admin") == false)

        {
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mezera">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mezera">
                            <label asp-for="DietDate" class="control-label"></label>
                            <input asp-for="DietDate" class="form-control" />
                            <span asp-validation-for="DietDate" class="text-danger"></span>
                        </div>
                        <div class="form-group mezera">
                            <label asp-for="EnergyDietTotal" class="control-label"></label>
                            <input asp-for="EnergyDietTotal" class="form-control" />
                            <span asp-validation-for="EnergyDietTotal" class="text-danger"></span>
                            <a class="pridat-tlacitko mezera-tlacitko" asp-controller="Diets" asp-action="SoucetDietsDen" target="_blank">Hodnotu naleznete zde</a>
                        </div>
                        <div class="form-group mezera">
                            <label asp-for="EnergyActivitesTotal" class="control-label"></label>
                            <input asp-for="EnergyActivitesTotal" class="form-control" />
                            <span asp-validation-for="EnergyActivitesTotal" class="text-danger"></span>
                            <a class="pridat-tlacitko mezera-tlacitko" asp-controller="Activities" asp-action="SoucetActivitiesDen" target="_blank">Hodnotu naleznete zde</a>
                        </div>
                        <div class="form-group mezera">
                            <label asp-for="BMR" class="control-label"></label>
                            <input asp-for="BMR" class="form-control" />
                            <span asp-validation-for="BMR" class="text-danger"></span>
                            <a class="pridat-tlacitko mezera-tlacitko" asp-controller="Users" asp-action="Index" target="_blank">Hodnotu naleznete zde</a>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="pridat-tlacitko" value="Spočítat energetickou bilanci" />
                        </div>
                    </form>
                </div>
            </div>

            <p></p>
            <div>
                <a asp-action="Index" class="pridat-tlacitko">Zpět na přehled energetické bilance</a>
            </div>

        }
    </div>

    @if (this.Context.User.IsInRole("Admin"))
    {
        <p>Admin nemůže data upravovat. Přihlaste se jako uživatel.</p>
        <p></p>
        <div>
            <a asp-action="Index" class="pridat-tlacitko">Zpět na přehled energetické bilance</a>
        </div>
    }

</body>