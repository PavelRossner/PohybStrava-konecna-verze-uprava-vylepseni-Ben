@model EnergyBalance

@{
    ViewData["Title"] = "Smazat záznam";
}

<body>
    <div id="sirkatextu">
        <h3>Opravdu chcete záznam smazat?</h3>
        <div>
            <h4>PrijemVydejEnergie</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DietDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DietDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EnergyDietTotal)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EnergyDietTotal)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EnergyActivitesTotal)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EnergyActivitesTotal)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BMR)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BMR)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EnergyBalanceTotal)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EnergyBalanceTotal)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="EnergyBalanceId" />
                <input type="submit" value="Smazat" class="pridat-tlacitko" /> |
                <a asp-action="Index" class="pridat-tlacitko">Zpět</a>
            </form>
        </div>
    </div>
</body>

