@model EnergyBalance

@{
    ViewData["Title"] = "Upravit záznam";
}

<body>
    <div id="sirkatextu">
        <h3>Úprava údajů</h3>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EnergyBalanceId" />
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DietDate" class="control-label"></label>
                        <input asp-for="DietDate" class="form-control" />
                        <span asp-validation-for="DietDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnergyDietTotal" class="control-label"></label>
                        <input asp-for="EnergyDietTotal" class="form-control" />
                        <span asp-validation-for="EnergyDietTotal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnergyActivitesTotal" class="control-label"></label>
                        <input asp-for="EnergyActivitesTotal" class="form-control" />
                        <span asp-validation-for="EnergyActivitesTotal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BMR" class="control-label"></label>
                        <input asp-for="BMR" class="form-control" />
                        <span asp-validation-for="BMR" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnergyBalanceTotal" class="control-label"></label>
                        <input asp-for="EnergyBalanceTotal" class="form-control" />
                        <span asp-validation-for="EnergyBalanceTotal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="pridat-tlacitko" value="Uložit" />
                    </div>
                </form>
            </div>
        </div>
        <p></p>
        <div>
            <a asp-action="Index" class="pridat-tlacitko">Zpět</a>
        </div>
    </div>
</body>
