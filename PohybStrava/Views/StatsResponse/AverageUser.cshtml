@model IEnumerable<StatsResponse>
@{
    ViewData["Title"] = "Měsíční průměry";
}

<body>
    <div id="sirkatextu">
        <h3 id="tabulkynadpis">Sportovec - měsíční průměry</h3>

        <table class="table" id="centrovanitabulky">
            <thead>
                <tr>
                    <th>
                        Datum (měsíc.rok)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Weight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BMI)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Month.@item.Year
                        </td>
                        <td>
                            @item.WeightAverage
                        </td>
                        <td>
                            @item.BMIAverage
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <br />
        <a asp-controller="Users" asp-action="Index" class="pridat-tlacitko">Zpět na informace o uživateli</a> |
        <a asp-action="Index" class="pridat-tlacitko">Zpět na denní hodnoty</a>
    </div>
</body>