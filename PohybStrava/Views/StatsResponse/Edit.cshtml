@model StatsResponse

@{
    ViewData["Title"] = "Úprava údajů";
}


<body>
    <div id="sirkatextuhlavnistrana">
        <h3>Úprava údajů</h3>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="StatsId" />
                    <div class="form-group">
                        <label asp-for="UserDate" class="control-label"></label>
                        <input asp-for="UserDate" class="form-control" />
                        <span asp-validation-for="UserDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Weight" class="control-label"></label>
                        <input asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Height" class="control-label"></label>
                        <input asp-for="Height" class="form-control" />
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BMI" class="control-label"></label>
                        <input asp-for="BMI" class="form-control" />
                        <span asp-validation-for="BMI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BMR" class="control-label"></label>
                        <input asp-for="BMR" class="form-control" />
                        <span asp-validation-for="BMR" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="pridat-tlacitko" value="Uložit" />
                    </div>
                </form>
            </div>
        </div>

        <p></p>
        <div>
            <a asp-action="Index" class="pridat-tlacitko">Zpět</a>|
            <a asp-controller="Account" asp-action="Administration" class="pridat-tlacitko">Zpět na administraci účtů</a>
        </div>

</body>
